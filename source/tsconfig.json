{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "~appConfig": [
        "./app-config.json"
      ],
      "~modules/*": [
        "./modules/*"
      ],
      "~interfaces/*": [
        "./interfaces/*"
      ],
      "~decorators/*": [
        "./decorators/*"
      ],
      "~data-sources/*": [
        "./data-sources/*"
      ],
      "~guards/*": [
        "./guards/*"
      ],
      "~utils/*": [
        "./utils/*"
      ],
      "~directives/*": [
        "./directives/*"
      ]
    }
  }
}
